{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["(", ")"],
        ["[", "]"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["(", ")"],
        ["[", "]"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["\"", "\""],
        ["'", "'"],
        ["{", "}"],
        ["(", ")"],
        ["[", "]"]
    ],
    "indentationRules": {
        "increaseIndentPattern": ".*\\b(?:if|else|elseif|for|foreach|while|do|switch|try|catch|finally|class|function|public|private|protected|static|new|return|echo|print)\\b.*{.*$",
        "decreaseIndentPattern": "^\\s*(return|break|continue)\\b.*$"
    }
}