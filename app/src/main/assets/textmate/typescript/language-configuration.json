{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["(", ")"],
        ["[", "]"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["(", ")"],
        ["[", "]"],
        ["\"", "\""],
        ["'", "'"],
        ["`", "`"]
    ],
    "surroundingPairs": [
        ["\"", "\""],
        ["'", "'"],
        ["`", "`"],
        ["{", "}"],
        ["(", ")"],
        ["[", "]"]
    ],
    "indentationRules": {
        "increaseIndentPattern": ".*\\b(?:if|else|for|while|switch|try|catch|finally|function|class|const|let|var)\\b.*{.*$",
        "decreaseIndentPattern": "^\\s*(return|break|continue)\\b.*$"
    }
}