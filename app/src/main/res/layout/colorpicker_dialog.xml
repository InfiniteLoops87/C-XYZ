<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/background"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:paddingBottom="8dp"
		android:background="#111111"
		android:gravity="top"
		android:orientation="vertical"
		android:layout_gravity="center_horizontal|center_vertical">
		<TextView
			android:id="@+id/title"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="8dp"
			android:paddingTop="8dp"
			android:paddingRight="8dp"
			android:text="Pick color:"
			android:textSize="20sp"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:singleLine="true"
			android:ellipsize="marquee"
			android:marqueeRepeatLimit="marquee_forever"
			android:scrollHorizontally="true" />
		<LinearLayout
			android:id="@+id/colorpicker_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/color_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/background_drawable"
					android:layout_width="match_parent"
					android:layout_height="80dp"
					android:layout_marginLeft="8dp"
					android:layout_marginRight="8dp"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/color_preview"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="1dp"
						android:padding="8dp"
						android:background="#FFFFFF"
						android:orientation="horizontal" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/hextag_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/tag"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="4dp"
					android:text="#"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#FFFFFF" />
				<EditText
					android:id="@+id/hexinput"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingTop="4dp"
					android:paddingBottom="4dp"
					android:background="@android:color/transparent"
					android:text="FF000000"
					android:textSize="16sp"
					android:textColor="#FFFFFF"
					android:textColorHint="#607D8B"
					android:singleLine="true"
					android:imeOptions="actionDone"
					android:focusable="true" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/alpha_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="30dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:layout_weight="1">
				<TextView
					android:id="@+id/atag"
					android:focusable="false"
					android:layout_width="30dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="A"
					android:textSize="14sp"
					android:textStyle="bold"
					android:textColor="#BDBDBD" />
				<SeekBar
					android:id="@+id/alpha"
					android:focusable="false"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="2dp"
					android:paddingRight="8dp"
					android:paddingBottom="2dp"
					android:progress="255"
					android:max="255"
					android:layout_weight="1"
					android:thumb="@drawable/seekbar_thumb"
					android:progressDrawable="@drawable/seekbar_drawable"
					android:splitTrack="false" />
				<TextView
					android:id="@+id/aval"
					android:focusable="false"
					android:layout_width="40dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_horizontal"
					android:text="255"
					android:textSize="14sp"
					android:textColor="#9E9E9E" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/red_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:layout_weight="1">
				<TextView
					android:id="@+id/rtag"
					android:focusable="false"
					android:layout_width="30dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="R"
					android:textSize="14sp"
					android:textStyle="bold"
					android:textColor="#FF0000" />
				<SeekBar
					android:id="@+id/red"
					android:focusable="false"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="2dp"
					android:paddingRight="8dp"
					android:paddingBottom="2dp"
					android:max="255"
					android:layout_weight="1"
					android:thumb="@drawable/seekbar_thumb"
					android:progressDrawable="@drawable/seekbar_drawable"
					android:splitTrack="false" />
				<TextView
					android:id="@+id/rval"
					android:focusable="false"
					android:layout_width="40dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_horizontal"
					android:text="0"
					android:textSize="14sp"
					android:textColor="#FF0000" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/green_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:layout_weight="1">
				<TextView
					android:id="@+id/gtag"
					android:focusable="false"
					android:layout_width="30dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="G"
					android:textSize="14sp"
					android:textStyle="bold"
					android:textColor="#00FF00" />
				<SeekBar
					android:id="@+id/green"
					android:focusable="false"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="2dp"
					android:paddingRight="8dp"
					android:paddingBottom="2dp"
					android:max="255"
					android:layout_weight="1"
					android:thumb="@drawable/seekbar_thumb"
					android:progressDrawable="@drawable/seekbar_drawable"
					android:splitTrack="false" />
				<TextView
					android:id="@+id/gval"
					android:focusable="false"
					android:layout_width="40dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_horizontal"
					android:text="0"
					android:textSize="14sp"
					android:textColor="#00FF00" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/blue_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:layout_weight="1">
				<TextView
					android:id="@+id/btag"
					android:focusable="false"
					android:layout_width="30dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="B"
					android:textSize="14sp"
					android:textStyle="bold"
					android:textColor="#2540FF" />
				<SeekBar
					android:id="@+id/blue"
					android:focusable="false"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="2dp"
					android:paddingRight="8dp"
					android:paddingBottom="2dp"
					android:max="255"
					android:layout_weight="1"
					android:thumb="@drawable/seekbar_thumb"
					android:progressDrawable="@drawable/seekbar_drawable"
					android:splitTrack="false" />
				<TextView
					android:id="@+id/bval"
					android:focusable="false"
					android:layout_width="40dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_horizontal"
					android:text="0"
					android:textSize="14sp"
					android:textColor="#2540FF" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/LinearLayout7"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:paddingBottom="8dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/cancel_button"
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:layout_weight="1">
				<ImageView
					android:id="@+id/imageview9"
					android:focusable="false"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:padding="8dp"
					android:src="@drawable/content_dismiss"
					android:scaleType="fitCenter" />
				<TextView
					android:id="@+id/textview3"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="5dp"
					android:padding="8dp"
					android:gravity="center_horizontal"
					android:text="Cancel"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="#FFFFFF"
					android:singleLine="true"
					android:layout_weight="1"
					android:ellipsize="marquee"
					android:marqueeRepeatLimit="marquee_forever"
					android:scrollHorizontally="true" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear8"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical"
				android:layout_weight="1" />
			<LinearLayout
				android:id="@+id/insert_button"
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:layout_weight="1">
				<ImageView
					android:id="@+id/imageview1"
					android:focusable="false"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:padding="8dp"
					android:src="@drawable/content_add"
					android:scaleType="fitCenter" />
				<TextView
					android:id="@+id/textview4"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="5dp"
					android:padding="8dp"
					android:gravity="center_horizontal"
					android:text="Insert"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="#FFFFFF"
					android:layout_weight="1"
					android:ellipsize="marquee"
					android:marqueeRepeatLimit="marquee_forever"
					android:scrollHorizontally="true" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
