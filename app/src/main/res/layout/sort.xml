<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:background="#111111"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/title"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:text="Sort by"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#FFFFFF"
				android:layout_weight="1" />
		</LinearLayout>
		<TextView
			android:id="@+id/textview2"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="15dp"
			android:paddingLeft="16dp"
			android:paddingRight="16dp"
			android:text="Note: The list is always sorted by folders first, then files."
			android:textSize="14sp"
			android:textColor="#BDBDBD" />
		<LinearLayout
			android:id="@+id/container1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:animateLayoutChanges="true">
			<LinearLayout
				android:id="@+id/linear15"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/imageradio1"
					android:focusable="false"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:padding="8dp"
					android:src="@drawable/content_alphabetical_sorting"
					android:scaleType="fitCenter" />
				<ImageView
					android:id="@+id/imageview5"
					android:focusable="false"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:padding="8dp"
					android:src="@drawable/content_size_sorting"
					android:scaleType="fitCenter" />
				<ImageView
					android:id="@+id/imageview6"
					android:focusable="false"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:padding="8dp"
					android:src="@drawable/content_numeric_sorting"
					android:scaleType="fitCenter" />
			</LinearLayout>
			<RadioGroup
				android:id="@+id/radiogroup1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<RadioButton
					android:id="@+id/radiobutton1"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:text="Name"
					android:textSize="14sp"
					android:textColor="#FFFFFF"
					android:button="@drawable/checkbox_selector" />
				<RadioButton
					android:id="@+id/radiobutton2"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:text="Date"
					android:textSize="14sp"
					android:textColor="#FFFFFF"
					android:button="@drawable/checkbox_selector" />
				<RadioButton
					android:id="@+id/radiobutton3"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:text="Size"
					android:textSize="14sp"
					android:textColor="#FFFFFF"
					android:button="@drawable/checkbox_selector" />
			</RadioGroup>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear4"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_margin="8dp"
			android:padding="8dp"
			android:background="#ECEFF1"
			android:orientation="horizontal" />
		<LinearLayout
			android:id="@+id/container2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:animateLayoutChanges="true">
			<LinearLayout
				android:id="@+id/linear16"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/imageview8"
					android:focusable="false"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:padding="8dp"
					android:src="@drawable/content_ascending_sorting"
					android:scaleType="fitCenter" />
				<ImageView
					android:id="@+id/imageview9"
					android:focusable="false"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:padding="8dp"
					android:src="@drawable/content_descending_sorting"
					android:scaleType="fitCenter" />
			</LinearLayout>
			<RadioGroup
				android:id="@+id/radiogroup2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<RadioButton
					android:id="@+id/radiobutton4"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:text="Ascending"
					android:textSize="14sp"
					android:textColor="#FFFFFF"
					android:button="@drawable/checkbox_selector" />
				<RadioButton
					android:id="@+id/radiobutton5"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:text="Descending"
					android:textSize="14sp"
					android:textColor="#FFFFFF"
					android:button="@drawable/checkbox_selector" />
			</RadioGroup>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/LinearLayout7"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="8dp"
			android:paddingTop="4dp"
			android:paddingRight="8dp"
			android:paddingBottom="8dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/close"
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:layout_weight="1"
				android:visibility="gone">
				<ImageView
					android:id="@+id/imageview11"
					android:focusable="false"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:padding="8dp"
					android:src="@drawable/content_dismiss"
					android:scaleType="fitCenter" />
				<TextView
					android:id="@+id/textview3"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="5dp"
					android:padding="8dp"
					android:gravity="center_horizontal"
					android:text="Cancel"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="#FFFFFF"
					android:singleLine="true"
					android:layout_weight="1"
					android:ellipsize="marquee"
					android:marqueeRepeatLimit="marquee_forever"
					android:scrollHorizontally="true" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear8"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical"
				android:layout_weight="1"
				android:visibility="gone" />
			<LinearLayout
				android:id="@+id/action"
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:layout_weight="1">
				<ImageView
					android:id="@+id/imageview2"
					android:focusable="false"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:padding="8dp"
					android:src="@drawable/content_check"
					android:scaleType="fitCenter" />
				<TextView
					android:id="@+id/textview1"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="5dp"
					android:padding="8dp"
					android:gravity="center_horizontal"
					android:text="Apply"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="#FFFFFF"
					android:layout_weight="1"
					android:ellipsize="marquee"
					android:marqueeRepeatLimit="marquee_forever"
					android:scrollHorizontally="true" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
